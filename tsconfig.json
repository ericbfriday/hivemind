{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"],
      "utils/*": ["./src/utils/*"],
      "spawn-role/*": ["./src/spawn-role/*"],
      "dispatcher/*": ["./src/dispatcher/*"],
      "operation/*": ["./src/operation/*"],
      "process/*": ["./src/process/*"],
      "prototype/*": ["./src/prototype/*"],
      "room/*": ["./src/room/*"],
      "creep/*": ["./src/creep/*"],
      "role/*": ["./src/role/*"],
      "report/*": ["./src/report/*"],
      "empire/*": ["./src/empire/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/typed-screeps",
      "./src/index.d.ts"
    ],
    "strict": false,
    "strictNullChecks": false,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "mock",
    "*.example.ts",
    "snippets.js"
  ]
}
